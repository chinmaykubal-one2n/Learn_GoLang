{
  "info": {
    "name": "Student API Go-Gin",
    "_postman_id": "abc12345-def6-7890-gh12-ijkl34567890",
    "description": "Postman collection for testing the Gin-based Student API with JWT auth",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:8080/healthz",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["healthz"]
        }
      }
    },
    {
      "name": "Login Tester",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"tester\",\n  \"password\": \"password\"\n}"
        },
        "url": {
          "raw": "http://localhost:8080/login",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["login"]
        }
      }
    },
    {
      "name": "Login Admin",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"admin\",\n  \"password\": \"password\"\n}"
        },
        "url": {
          "raw": "http://localhost:8080/login",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["login"]
        }
      }
    },
    {
      "name": "Refresh Token",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
        "url": {
          "raw": "http://localhost:8080/refresh_token",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["refresh_token"]
        }
      }
    },
    {
      "name": "Create Student",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Alice\",\n  \"age\": 22,\n  \"email\": \"alice@example.com\"\n}"
        },
        "url": {
          "raw": "http://localhost:8080/api/students",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "students"]
        }
      }
    },
    {
      "name": "List Students",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
        "url": {
          "raw": "http://localhost:8080/api/students",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "students"]
        }
      }
    },
    {
      "name": "Get Student",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
        "url": {
          "raw": "http://localhost:8080/api/students/{{student_id}}",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "students", "{{student_id}}"]
        }
      }
    },
    {
      "name": "Update Student",
      "request": {
        "method": "PUT",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Alice Updated\",\n  \"age\": 23,\n  \"email\": \"alice.updated@example.com\"\n}"
        },
        "url": {
          "raw": "http://localhost:8080/api/students/{{student_id}}",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "students", "{{student_id}}"]
        }
      }
    },
    {
      "name": "Delete Student",
      "request": {
        "method": "DELETE",
        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
        "url": {
          "raw": "http://localhost:8080/api/students/{{student_id}}",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "students", "{{student_id}}"]
        }
      }
    }
  ]
}
